.footer
  display: flex
  margin-top: $spacing-lg
  padding: $spacing-lg
  background: $black
  align-items: center
  color: $light-silver

  .picture
    width: 140px
    height: 140px

  .content
    margin-left: $spacing-lg
    font-size: $f7

  .pages
    margin-bottom: $spacing-md

  p
    margin-top: 0

  a
    color: $white
    font-weight: 500
    text-decoration: none
    &:hover
      color: $red
      text-decoration: underline

  ul
    display: flex
    flex-direction: row
    margin: 0
    padding: 0

  li
    list-style-type: none
    margin-right: $spacing-md

  .bottom
    display: flex
    flex-direction: row

    a
      font-weight: 400
      svg
        width: 2rem
        height: 2rem
        fill: $white
        transition: all 250ms ease
      &:hover
        svg
          fill: $red

    .copyright
      font-size: $f8
      color: $mid-gray
      .license
        color: $mid-gray
        text-decoration: none
        &:hover
          color: $light-silver
          text-decoration: underline
