.post

  main
    display: flex
    flex-direction: column
    @media $viewport-lg
      flex-direction: row

  .content
    margin: $spacing-md $spacing-lg
    max-width: $measure-wide
    line-height: $lh-copy

  .drop-cap
    text-transform: uppercase
    font-weight: 600

  sup
    display: inline-block
    top: -0.15em
    line-height: 1
    a.footnote-ref
      display: block
      padding: 4px 8px
      border-radius: 50%
      font-size: $f8
      font-weight: 800
      background: $silver
      color: $white
      text-decoration: none
      &:hover
        background: $red

  .footnotes
    font-size: $f7
    li
      p
        display: inline

  .post-header
    padding: $spacing-lg
    background: $near-white

    h1
      margin: 0 0 $spacing-xs 0
      font-size: $f3
      font-family: $font-title
      font-weight: 800

    h2
      margin: 0
      font-size: $f5
      font-weight: 300
      color: $mid-gray

    .byline
      font-size: $f8
      font-weight: 400
      margin-bottom: $spacing-sm
      color: $mid-gray

    .category
      font-size: $f7
      color: $black
      font-family: $font-title
      font-style: italic
      font-weight: 600
      text-transform: uppercase
      letter-spacing: $tracking-medium

    time
      padding: 0 $spacing-md
